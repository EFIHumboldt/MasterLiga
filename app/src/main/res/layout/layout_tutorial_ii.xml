<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#BF000000">

    <ImageView
        android:id="@+id/arrowImageView"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/arrowImageView2"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/dwon_arrow"

        />

    <ImageView
        android:id="@+id/arrowImageView2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrowImageView"
        app:layout_constraintEnd_toStartOf="@id/arrowImageView3"
        android:layout_marginBottom="50dp"
        android:src="@drawable/dwon_arrow"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/arrowImageView3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrowImageView2"
        android:layout_marginBottom="50dp"
        android:src="@drawable/dwon_arrow"
        app:layout_constraintEnd_toStartOf="@id/arrowImageView4"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/arrowImageView4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrowImageView3"
        app:layout_constraintEnd_toStartOf="@id/arrowImageView5"
        android:layout_marginBottom="50dp"
        android:src="@drawable/dwon_arrow"
        android:visibility="invisible"
        />

    <ImageView
        android:id="@+id/arrowImageView5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/arrowImageView4"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/dwon_arrow"
        android:visibility="invisible"
        />


    <TextView
        android:id="@+id/messageTextView"
        style="@style/TamanioLimitadov26"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/arrowImageView"
        android:padding="10dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="center"
        android:text="Aquí podrá acceder a las tablas de posiciones"
        android:textColor="#FFFFFF"
        android:textSize="18dp"
        app:layout_constraintBottom_toTopOf="@id/arrowImageView2"/>
</androidx.constraintlayout.widget.ConstraintLayout>