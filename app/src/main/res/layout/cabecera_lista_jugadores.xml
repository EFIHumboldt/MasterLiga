<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card"
    android:layout_width="wrap_content"
    android:layout_height="35sp"
    android:padding="0dp"
    android:background="@drawable/background_cabecera_posiciones">

    <TextView
        android:id="@+id/posicion"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:text="Dorsal y Nombre completo"
        android:fontFamily="@font/montserrat_bold"
        style="@style/TextViewPosicionTamanioLimitadov26"
        android:textColor="@color/white"></TextView>

    <ImageView
        android:id="@+id/ball"
        android:layout_height="20dp"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/yellow_card"
        android:layout_marginEnd="10sp"
        android:fontFamily="@font/montserrat_regular"
        style="@style/TextViewPosicionTamanioLimitadov26"
        android:src="@drawable/football_ball"
        app:tint="@color/white" />

    <ImageView
        android:id="@+id/yellow_card"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@id/red_card"
        android:layout_marginEnd="10sp"
        android:fontFamily="@font/montserrat_regular"
        style="@style/TextViewPosicionTamanioLimitadov26"
        android:src="@drawable/yellow_card"/>

    <ImageView
        android:id="@+id/red_card"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="10dp"
        android:fontFamily="@font/montserrat_regular"
        style="@style/TextViewPosicionTamanioLimitadov26"
        android:src="@drawable/red_card"
        />

</RelativeLayout>
