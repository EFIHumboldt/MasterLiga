<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="20dp"
        android:text="CONTACTOS:"
        android:textSize="20sp"
        android:fontFamily="@font/montserrat_bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

    </TextView>

    <ImageView
        android:id="@+id/telefono"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/telefono"
        android:layout_marginTop="20dp"
        android:layout_marginStart="20dp"
        >

    </ImageView>

    <TextView
        android:id="@+id/numero"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="+54 9 351 800-5621"
        app:layout_constraintStart_toEndOf="@id/telefono"
        app:layout_constraintTop_toTopOf="@id/telefono"
        app:layout_constraintBottom_toTopOf="@id/nombre"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_bold"></TextView>

    <TextView
        android:id="@+id/nombre"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Alejo Sanchez Piccat"
        app:layout_constraintStart_toEndOf="@id/telefono"
        app:layout_constraintTop_toBottomOf="@id/numero"
        app:layout_constraintBottom_toBottomOf="@id/telefono"
        android:layout_marginStart="10dp"
        android:textSize="16dp"
        android:fontFamily="@font/montserrat_regular"></TextView>


</androidx.constraintlayout.widget.ConstraintLayout>